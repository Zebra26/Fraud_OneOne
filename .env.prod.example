APP_ENV=production

APP_HOST=0.0.0.0
APP_PORT=8000

# Mongo
MONGO_URI=mongodb://fraud_app:changeMe@mongo-router:27017/fraud?authSource=admin
MONGO_DB=fraud
MONGO_SSL=true
MONGO_TLS_CA_PATH=/app/security/certs/ca.crt

# Redis Cluster (managed)
REDIS_CLUSTER_NODES=redis-cluster:6379,redis-cluster:6380,redis-cluster:6381
REDIS_PASSWORD=changeMeStrong
REDIS_USE_SSL=true

# Kafka
KAFKA_BROKERS=kafka-1:9092,kafka-2:9092,kafka-3:9092

# Model paths
MODEL_DIR=/app/models
MODEL_PATH=/app/models/ensemble_detector.joblib
MODEL_PERFORMANCE_PATH=/app/models/model_performance.json
OPTIMAL_THRESHOLD_PATH=/app/models/optimal_threshold.txt

# Feature store URI
FEATURE_STORE_URI=redis+cluster://redis-cluster:6379

# Auth
JWT_SECRET_KEY=<base64-encoded-256-bit-secret>
JWT_ALGORITHM=HS256
JWT_ISSUER=fraud_k
JWT_AUDIENCE=fraud_api
API_HMAC_KEY=<base64-encoded-hmac-secret>
ENABLE_JWT_AUTH=true
ENABLE_HMAC_SIGNING=true

# TLS
ENABLE_TLS=true
TLS_CERT_PATH=/app/security/certs/server.crt
TLS_KEY_PATH=/app/security/certs/server.key
TLS_CA_PATH=/app/security/certs/ca.crt

# Rate limiting
RATE_LIMIT_CAPACITY=100
RATE_LIMIT_REFILL_PER_MIN=50
ALLOWED_SKEW_SECONDS=120
